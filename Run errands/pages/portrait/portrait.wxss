.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
ec-canvas {
  width: 100%;
  height: 100%;
}
.center {
  display: flex;
  justify-content: center;
  width: 750rpx;
  height: 300rpx;
  background-color: #ffcccc;
  margin-top: 280rpx;
}
.top {
  width: 140rpx;
  height: 140rpx;
  margin-top: 50rpx;
  text-align: center;
 
}
.top image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
