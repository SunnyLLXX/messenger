/* pages/accout/account.wxss */
page {
  background-color: #f1f1f1;
}
.main {
  width: 750rpx;
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  padding-bottom: 10rpx;
  border-bottom:1px solid #F5F6F7;
  color: #696969;
  font-size: 15px;
}
.account {
  margin: 10rpx;
  margin-left: 40rpx;
}
.count {
  margin-right: 40rpx;
  width: 100rpx;
  height: 50rpx;
  border-radius: 25rpx;
  color: #fff;
  background-color: #ff9933;
  font-size: 14px;
  text-align: center;
  line-height: 50rpx;
}
.list {
  display: flex;
  justify-content: space-between;
  width: 700rpx;
  height: 150rpx;
  margin: 10rpx auto;
  /* border-bottom: 1px solid #F5F6F7; */
  border-radius: 20rpx;
  box-shadow: 8rpx 8rpx 8rpx #e6e6e6;
  background-color: #fff;
}
.left {
  margin-left: 40rpx;
}
.left .info {
  font-size: 14px;
  margin-bottom: 10rpx;
  color: #9966ff;
  margin-top: 10rpx;
}
.left .classification {
  font-size: 13px;
  margin-bottom: 10rpx;
  color: #3399ff;
}
.left .date{
  font-size: 12px;
  color: #ff6600;
}
.right {
  font-weight: 700;
  margin-right: 40rpx;
  margin-top: 30rpx;
}
.listCount {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 700rpx;
  height: 100rpx;
  margin: 10rpx auto;
  box-shadow: 8rpx 8rpx 8rpx #e6e6e6;
  background-color: #fff;
  border-radius: 20rpx;
}
.leftCount .classification {
  font-size: 14px;
  margin-bottom: 10rpx;
  margin-left: 50rpx;
  color: #3399ff;
}
.rightCount {
  font-weight: 700;
  margin-right: 40rpx;
}
.messagenull {
  margin: 200rpx auto;
  width: 400rpx;
  height: 400rpx;
  line-height: 400rpx;
  text-align: center;
  font-size: 20px;
  color: #ccc;
}