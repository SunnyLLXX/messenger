
page {
  background-color: #f1f1f1;
}
.content {
  width: 700rpx;
  background-color: #fff;
  margin: 60rpx auto;
  border-radius: 20rpx;
  box-shadow: 8rpx 8rpx 8rpx #e6e6e6;
}
.title {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
  word-wrap: break-word;

}
.title .high {
  font-size: 18px;
  font-weight: 700;
  color: black;
}
.left {
  margin-left: 40rpx;
  color: #999;
  word-wrap: break-word;
}
.right {
  margin-right: 40rpx;
}
.pics{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin: 20rpx 0;
}
.pics image{
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 20rpx;
}
.content .describes {
  border-bottom: none;
}
.content .order{
  border-top: 1px solid #eee;
}
.btn {
  z-index: 999;
}
.title .bold {
  font-weight: 700;
}