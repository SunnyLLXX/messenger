/* pages/message/message.wxss */
page{
  background-color: #f1f1f1;
}
.messagetotal {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.message {
  display: flex;
  justify-content: space-between;
  width: 680rpx;
  height: 160rpx;
  box-shadow: 8rpx 8rpx 8rpx #E6E6E6;
  border-radius: 10px;
  margin: 20rpx auto;
  background-color: #fff;
}
.left {
  margin-left: 20rpx;
}
.datetime {
  font-size: 12px;
  color: #838383;
}
.state {
  position: absolute;
  right: 10rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: red;
  margin-top: 10rpx;
}
.right {
  position: relative;
  margin-top: 20rpx;
  margin-right: 40rpx;
}
.messagetop {
  font-size: 16px;
  margin: 20rpx 0;
  color: #F1C572;
}
.messagebottom {
  font-size: 12px;
}
.messagenull {
  margin: 200rpx auto;
  width: 400rpx;
  height: 400rpx;
  line-height: 400rpx;
  text-align: center;
  font-size: 20px;
  color: #ccc;
}